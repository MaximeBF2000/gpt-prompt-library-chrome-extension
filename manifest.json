{
  "manifest_version": 3,
  "name": "GPT Prompt Library",
  "description": "Store, search, and inject prompts directly inside ChatGPT.",
  "version": "0.1.0",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
